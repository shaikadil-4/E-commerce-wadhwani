<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bismillah E-Commerce</title>
    <style>
        body { font-family: Arial, sans-serif; margin: 0; padding: 0; background: #f4f4f4; }
        header { background: #333; color: white; padding: 10px; text-align: center; display: flex; justify-content: space-between; align-items: center; }
        .container { max-width: 1200px; margin: 20px auto; padding: 20px; }
        .products { display: flex; flex-wrap: wrap; gap: 20px; }
        .product { background: white; border: 1px solid #ddd; padding: 10px; width: 200px; text-align: center; }
        .product img { width: 100%; height: 150px; object-fit: cover; }
        button { background: #28a745; color: white; border: none; padding: 10px; cursor: pointer; margin: 5px; }
        button:hover { background: #218838; }
        #cart { position: fixed; top: 10px; right: 10px; background: white; border: 1px solid #ddd; padding: 10px; width: 250px; max-height: 400px; overflow-y: auto; }
        #cart-items { max-height: 200px; overflow-y: auto; }
        .hidden { display: none; }
        form { background: white; padding: 20px; border: 1px solid #ddd; margin: 20px 0; }
        input { display: block; margin: 10px 0; padding: 8px; width: 100%; }
        .admin-panel { background: #f9f9f9; padding: 20px; }
    </style>
</head>
<body>
    <header>
        <h1>Bismillah E-Commerce</h1>
        <div id="user-info">
            <button id="login-btn" onclick="showLogin()">Login</button>
            <button id="logout-btn" class="hidden" onclick="logout()">Logout</button>
            <span id="user-name" class="hidden"></span>
        </div>
    </header>
    <div class="container">
        <div id="login-form" class="hidden">
            <h2>Login/Register</h2>
            <form onsubmit="handleAuth(event)">
                <input type="email" id="email" placeholder="Email" required>
                <input type="password" id="password" placeholder="Password" required>
                <button type="submit">Login/Register</button>
            </form>
        </div>
        <div id="admin-panel" class="hidden admin-panel">
            <h2>Admin: Add Product</h2>
            <form onsubmit="addProduct(event)">
                <input type="text" id="prod-name" placeholder="Name" required>
                <input type="number" id="prod-price" placeholder="Price" required>
                <input type="text" id="prod-desc" placeholder="Description" required>
                <input type="text" id="prod-cat" placeholder="Category" required>
                <input type="url" id="prod-img" placeholder="Image URL" required>
                <button type="submit">Add Product</button>
            </form>
        </div>
        <h2>Products</h2>
        <input type="text" id="search" placeholder="Search products..." onkeyup="filterProducts()">
        <select id="filter-cat" onchange="filterProducts()">
            <option value="">All Categories</option>
        </select>
        <div class="products" id="products"></div>
    </div>
    <div id="cart" class="hidden">
        <h3>Cart</h3>
        <div id="cart-items"></div>
        <p>Total: $<span id="total">0</span></p>
        <button onclick="showCheckout()">Checkout</button>
    </div>
    <div id="checkout-form" class="hidden">
        <h2>Checkout</h2>
        <form onsubmit="completeCheckout(event)">
            <input type="text" placeholder="Name" required>
            <input type="text" placeholder="Address" required>
            <input type="text" placeholder="Card Number (Mock)" required>
            <button type="submit">Complete Purchase</button>
        </form>
    </div>

    <script>
        let products = JSON.parse(localStorage.getItem('products')) || [
            { id: 1, name: 'Laptop', price: 999, description: 'High-performance laptop', category: 'Electronics', image: 'https://via.placeholder.com/200' },
            { id: 2, name: 'Phone', price: 599, description: 'Smartphone', category: 'Electronics', image: 'https://via.placeholder.com/200' },
            { id: 3, name: 'Shoes', price: 99, description: 'Comfortable shoes', category: 'Fashion', image: 'https://via.placeholder.com/200' },
            { id: 4, name: 'Book', price: 19, description: 'Bestseller book', category: 'Books', image: 'https://via.placeholder.com/200' }
        ];
        let cart = JSON.parse(localStorage.getItem('cart')) || [];
        let users = JSON.parse(localStorage.getItem('users')) || [];
        let currentUser = JSON.parse(localStorage.getItem('currentUser')) || null;

        function renderProducts(filtered = products) {
            const container = document.getElementById('products');
            container.innerHTML = filtered.map(p => `
                <div class="product">
                    <img src="${p.image}" alt="${p.name}">
                    <h3>${p.name}</h3>
                    <p>${p.description}</p>
                    <p>$${p.price}</p>
                    <button onclick="addToCart(${p.id})">Add to Cart</button>
                </div>
            `).join('');
            updateCategories();
        }

        function updateCategories() {
            const select = document.getElementById('filter-cat');
            const cats = [...new Set(products.map(p => p.category))];
            select.innerHTML = '<option value="">All Categories</option>' + cats.map(c => `<option value="${c}">${c}</option>`).join('');
        }

        function filterProducts() {
            const search = document.getElementById('search').value.toLowerCase();
            const cat = document.getElementById('filter-cat').value;
            const filtered = products.filter(p => 
                p.name.toLowerCase().includes(search) && (cat === '' || p.category === cat)
            );
            renderProducts(filtered);
        }

        function addToCart(id) {
            const product = products.find(p => p.id === id);
            cart.push(product);
            updateCart();
            localStorage.setItem('cart', JSON.stringify(cart));
        }

        function updateCart() {
            const items = document.getElementById('cart-items');
            items.innerHTML = cart.map((p, i) => `<p>${p.name} - $${p.price} <button onclick="removeFromCart(${i})">Remove</button></p>`).join('');
            document.getElementById('total').textContent = cart.reduce((sum, p) => sum + p.price, 0);
            document.getElementById('cart').classList.toggle('hidden', cart.length === 0);
        }

        function removeFromCart(index) {
            cart.splice(index, 1);
            updateCart();
            localStorage.setItem('cart', JSON.stringify(cart));
        }

        function showCheckout() {
            document.getElementById('checkout-form').classList.remove('hidden');
        }

        function completeCheckout(event) {
            event.preventDefault();
            alert(`Purchase complete! Total: $${cart.reduce((sum, p) => sum + p.price, 0)}. (Mock - no real payment.)`);
            cart = [];
            updateCart();
            localStorage.setItem('cart', JSON.stringify(cart));
            document.getElementById('checkout-form').classList.add('hidden');
        }

        function showLogin() {
            document.getElementById('login-form').classList.remove('hidden');
        }

        function handleAuth(event) {
            event.preventDefault();
            const email = document.getElementById('email').value;
            const password = document.getElementById('password').value;
            let user = users.find(u => u.email === email);
            if (!user) {
                user = { email, password, role: email === 'admin@bismillah.com' ? 'admin' : 'user' };
                users.push(user);
                localStorage.setItem('users', JSON.stringify(users));
            }
            if (user.password === password) {
                currentUser = user;
                localStorage.setItem('currentUser', JSON.stringify(currentUser));
                updateUI();
                document.getElementById('login-form').classList.add('hidden');
            } else {
                alert('Invalid credentials');
            }
        }

        function logout() {
            currentUser = null;
            localStorage.removeItem('currentUser');
            updateUI();
        }

        function updateUI() {
            if (currentUser) {
                document.getElementById('login-btn').classList.add('hidden');
                document.getElementById('logout-btn').classList.remove('hidden');
                document.getElementById('user-name').textContent = `Welcome, ${currentUser.email}`;
                document.getElementById('user-name').classList.remove('hidden');
                if (currentUser.role === 'admin') {
                    document.getElementById('admin-panel').classList.remove('hidden');
                }
            } else {
                document.getElementById('login-btn').classList.remove('hidden');
                document.getElementById('logout-btn').classList.add('hidden');
                document.getElementById('user-name').classList.add('hidden');
                document.getElementById('admin-panel').classList.add('hidden');
            }
        }

        function addProduct(event) {
            event.preventDefault();
            const newProd = {
                id: Date.now(),
                name: document.getElementById('prod-name').value,
                price: parseFloat(document.getElementById('prod-price').value),
                description: document.getElementById('prod-desc').value,
                category: document.getElementById('prod-cat').value,
                image: document.getElementById('prod-img').value
            };
            products.push(newProd);
            localStorage.setItem('products', JSON.stringify(products));
            renderProducts();
            event.target.reset();
        }

        renderProducts();
        updateCart();
        updateUI();
    </script>
</body>
</html>
